<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>A00818459_assignment03</display-name>
  <filter>
    <filter-name>CommandFilter</filter-name>
    <filter-class>ca.bcit.comp4656.employee.filter.CommandFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CommandFilter</filter-name>
    <servlet-name>EmployeeController</servlet-name>
  </filter-mapping>
  <servlet>
    <servlet-name>EmployeeController</servlet-name>
    <servlet-class>ca.bcit.comp4656.employee.controller.EmployeeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployeeController</servlet-name>
    <url-pattern>home</url-pattern>
  </servlet-mapping>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Guest</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>user</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Admin</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/JSPs/Login.jsp</form-login-page>
      <form-error-page>/JSPs/Login-error.jsp</form-error-page>
    </form-login-config>
  </login-config>
  <welcome-file-list>
    <welcome-file>home</welcome-file>
  </welcome-file-list>
</web-app>